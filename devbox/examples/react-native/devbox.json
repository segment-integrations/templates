{
  "include": ["path:../../plugins/react-native/plugin.json"],
  "packages": ["nodejs@20", "watchman@latest"],
  "env": {
    "IOS_APP_PROJECT": "ReactNativeExample.xcodeproj",
    "IOS_APP_SCHEME": "ReactNativeExample",
    "DEVBOX_COREPACK_ENABLED": "",
    "ANDROID_SDK_REQUIRED": "0"
  },
  "shell": {
    "scripts": {
      "build-web": "devbox run --pure build-node && node -e \"const path = process.env.WEB_BUILD_PATH || 'web/build'; require('fs').mkdirSync(path, { recursive: true });\"",
      "build": [
        "devbox run --pure build-android",
        "devbox run --pure build-ios",
        "devbox run --pure build-web"
      ]
    }
  }
}
